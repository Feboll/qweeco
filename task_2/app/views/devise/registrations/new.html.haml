%h2 Регистрация
= form_for(resource, as: resource_name,:html => {:class => "form-horizontal", :role => "form"}, url: registration_path(resource_name)) do |f|
	= devise_error_messages!
	.form-group
		= f.label "Имя", class: "col-sm-3 control-label"
		.col-sm-9
			= f.text_field :first_name, autofocus: true, class: "form-control"
	.form-group
		= f.label "Фамилия", class: "col-sm-3 control-label"
		.col-sm-9
			= f.text_field :second_name, autofocus: true, class: "form-control"
	.form-group
		= f.label "Отчество", class: "col-sm-3 control-label"
		.col-sm-9
			= f.text_field :last_name, autofocus: true, class: "form-control"
	.form-group
		= f.label :email, class: "col-sm-3 control-label"
		.col-sm-9
			= f.email_field :email, autofocus: true, class: "form-control"
	.form-group
		= f.label "Пароль", class: "col-sm-3 control-label"
		.col-sm-7
			= f.password_field :password, autocomplete: "off", class: "form-control"
		- if @validatable
			%em.col-sm-2
				(#{@minimum_password_length} characters minimum)
	.form-group
		= f.label "Подтверждение пароля", class: "col-sm-3 control-label"
		.col-sm-9
			= f.password_field :password_confirmation, autocomplete: "off", class: "form-control"
	.form-group
		.col-sm-offset-2.col-sm-10
			= f.submit "Зарегистрироваться", class: "btn btn-default"
= render "devise/shared/links"